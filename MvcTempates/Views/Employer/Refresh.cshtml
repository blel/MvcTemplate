@model MvcTempates.Models.EmployerSearchViewModel
@using MvcTempates.HtmlHelperExtensions
@using PagedList;
@using PagedList.Mvc;

@Html.Table(Model.ResultSet, "Employer", Model.CurrentSortedColumn, Model.SortedColumn, Model.SortDirection)
@Html.PagedListPager((IPagedList)Model.ResultSet, selectedPage => Url.Action("/Refresh", new { RequestedPage = selectedPage, SearchText = Model.SearchText, TableAction = TableActions.Page, SortedColumn = Model.SortedColumn, CurrentSortedColumn = Model.CurrentSortedColumn, SortDirection = Model.SortDirection  }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing("#ajaxContent"))

